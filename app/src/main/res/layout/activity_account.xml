<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="@drawable/bkgd">

    <ImageView
        android:id="@+id/iV2_main"
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:src="@drawable/hi_duck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tV2_main"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.40"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="15"
        android:shadowRadius="20"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/light_yellow"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iV2_main"
        app:layout_editor_absoluteY="@dimen/_85sdp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tV2_slogan"
        android:layout_width="@dimen/_310sdp"
        android:layout_height="@dimen/_25sdp"
        android:letterSpacing="0.11"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tV2_main" />

    <Button
        android:id="@+id/btn2_signup"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/custom_btn2"
        android:fontFamily="sans-serif-black"
        android:text="@string/btn1.1"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tV2_slogan" />

    <Button
        android:id="@+id/btn2_signIn"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/btn1.2"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        android:background="@drawable/custom_btn2"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn2_signup"/>

</androidx.constraintlayout.widget.ConstraintLayout>