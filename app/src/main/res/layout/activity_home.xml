                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:text="@string/card6.2"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="SmallSp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/divider_background"
            tools:ignore="TooManyViews" />

        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                tools:ignore="UselessParent">

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:neumorph_backgroundColor="#F0F0F0"
                    app:neumorph_shadowColorDark="#E0E0E0"
                    app:neumorph_shadowColorLight="@color/white"
                    app:neumorph_shapeAppearance="@style/NeumorphismImage"
                    app:neumorph_shapeType="pressed">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn1_home"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/lavender" />

                </soup.neumorphism.NeumorphCardView>

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn1_exercise"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_exercise"
                app:tint="@color/cardview_dark_background" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn1_game"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_game"
                app:tint="@color/cardview_dark_background" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn1_profile"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_profile"
                app:tint="@color/cardview_dark_background" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>